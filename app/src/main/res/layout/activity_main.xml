<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mac.inclassassignment08_mengqiz.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Key!"
        />

    <EditText
        android:id="@+id/key_edit_text_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type key here"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Value!"
        />

    <EditText
        android:id="@+id/value_edit_text_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type value here"
        android:layout_weight="1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="write to cloud"
        android:onClick="writeToCloud"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="read from cloud"
        android:onClick="readFromCloud"/>


</LinearLayout>
